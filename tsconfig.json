{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowUnreachableCode": false,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "pretty": true,
    "strict": false,
    "target": "es2019",
    "lib": ["es2019"]
  },
  "include": ["src/**/*", "types/**/*"],
}
